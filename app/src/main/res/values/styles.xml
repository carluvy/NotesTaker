<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:color">@color/carlas_turqouise</item>

        <item name="android:textStyle">bold</item>
    </style>
    <style name="CourseTitle" parent="@android:style/TextAppearance.Material.Medium">
        <item name="android:textColor">@color/carlas_turqouise</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AddFab" parent="@style/Widget.Design.FloatingActionButton">
        <item name="srcCompat">@drawable/ic_baseline_add_circle_24</item>
        <item name="android:tint">@android:color/white</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:color">@color/appBar</item>
    </style>


    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>